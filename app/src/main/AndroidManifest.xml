<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ces.cloudnote.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_SMS"/>
    <uses-permission android:name="com.android.voicemail.permission.ADD_VOICEMAIL" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	
    <application
        android:allowBackup="true"
        android:name=".imageloader.UILApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity android:name="DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.ces.cloudnote.app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ces.cloudnote.app.MainActivity" />
        </activity> 
        <activity android:name="ReceiveActivity"
            android:label="@string/title_activity_receive" >
        </activity>

        <activity android:name="WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".contactslist.ContactsListActivity"
             android:label="@string/activity_contacts_list"
             android:description="@string/app_description"
             android:icon="@drawable/ic_launcher"
             android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data android:resource="@xml/searchable_contacts" android:name="android.app.searchable"/>
        </activity>
        <activity android:name=".contactslist.ContactDetailActivity"></activity>

        <activity
            android:name="SystemUIHidderActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity android:name=".voicemail.AddVoicemailActivity"
             android:label="添加声音邮件" ></activity>
         
        <activity
            android:name=".imageloader.HomeActivity"
            android:label="加载图片">
        </activity>
        <activity
            android:name=".imageloader.ImageListActivity"
            android:label="@string/ac_name_image_list" />
        <activity
            android:name=".imageloader.ImageGridActivity"
            android:label="@string/ac_name_image_grid" />
        <activity
            android:name=".imageloader.ImagePagerActivity"
            android:label="@string/ac_name_image_pager" />
        <activity
            android:name=".imageloader.ImageGalleryActivity"
            android:label="@string/ac_name_image_gallery" />

        <!-- Widget -->
        <receiver android:name=".imageloader.widget.UILWidgetProvider" >
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider" />

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
        </receiver>
        
        <activity android:name=".navigation.NavigateActivity"
            android:label="导航"/>
        <activity android:name=".navigation.CollectionActivity"
            android:label="@string/demo_collection"/>
         
        <activity android:name=".photobyintent.PhotoIntentActivity"
            android:label="拍照"/>
        <activity android:name=".navigationdrawer.NavigateDrawerActivity"
            android:label="声音邮件"/>
        
        <activity android:name=".newsreader.NewsReaderActivity"
            android:label="新闻阅读"/>
        <activity android:name=".newsreader.ArticleActivity"
            android:label="文章详情"
            android:theme="@style/NewsReaderStyle_NoActionBar"/>
        
        <activity android:name=".networkusage.NetworkActivity"
            android:label="网络阅读"/>
        <activity android:name=".networkusage.SettingsActivity"
            android:label="设置" >
             <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />
                <category android:name="android.intent.category.DEFAULT" />
          </intent-filter>
        </activity>
        <activity android:name=".fragments.FragmentMainActivity"></activity>
        
        <activity android:name=".qiyi.QiyiMainActivity"
            android:label="奇艺"/>
        <activity android:name=".qiyi.account.AccountActivity"
            android:label="帐号"/>
        <activity android:name=".qiyi.channel.ChannelActivity"
            android:label="渠道"/>
        <activity android:name=".qiyi.search.SearchActivity"
            android:label="搜索"/>
        <activity android:name=".qiyi.home.HomeActivity"
            android:label="首页"/>
        <activity android:name=".qiyi.more.MoreActivity"
            android:label="更多"/>
        
        <activity
            android:name=".bitmapfun.ui.ImageDetailActivity"
            android:parentActivityName=".bitmapfun.ui.ImageGridActivity"
            android:theme="@style/AppTheme.FullScreen"
            android:label="表格图片">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".bitmapfun.ui.ImageGridActivity"/>
        </activity>
        <activity
            android:name=".bitmapfun.ui.ImageGridActivity"
            android:theme="@style/AppTheme" >
        </activity>
    </application>
    
</manifest>
